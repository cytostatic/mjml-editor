{
	"compilerOptions": {
		"module": "esnext",
		"target": "ES2020",
		"lib": [
            "dom",
			"dom.iterable",
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
		"allowJs": true,
		"noEmit": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react"
	},
	"include": [
		"src"
	]
}
