{
    "name": "mjml-editor",
    "displayName": "mjml-editor",
    "description": "A drag&drop editor for MJML Email templates in VSCode.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.79.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mjml-editor.openFile",
                "title": "Open MJML Editor",
                "category": "MJML Editor",
                "icon": "$(pencil)"
            },
            {
                "command": "mjml-editor.saveFile",
                "title": "Save MJML Editor",
                "category": "MJML Editor",
                "icon": "$(save)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "editorLangId == mjml",
                    "command": "mjml-editor.openFile",
                    "group": "navigation"
                },
                {
                    "when": "mjmlEditorVisible == true",
                    "command": "mjml-editor.saveFile",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/react": "^18.2.13",
        "@types/react-dom": "^18.2.6",
        "@types/vscode": "^1.79.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "css-loader": "^6.8.1",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "html-webpack-plugin": "^5.5.3",
        "mocha": "^10.2.0",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "style-loader": "^3.3.3",
        "svg-url-loader": "^8.0.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1"
    },
    "dependencies": {
        "@arco-themes/react-easy-email-theme": "^0.0.3",
        "@types/vscode-webview": "^1.57.1",
        "easy-email-core": "^4.12.2",
        "easy-email-editor": "^4.12.2",
        "easy-email-extensions": "^4.14.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-final-form": "^6.5.9",
        "react-use": "^17.4.0"
    }
}
